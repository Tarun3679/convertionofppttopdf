# Health Check
###############################################################################

### Check if server is running
GET {{baseUrl}}/health

###############################################################################
# Convert to Markdown
###############################################################################

### Convert PDF to Markdown (no OCR)
POST {{baseUrl}}/v1/convert/file
Content-Type: multipart/form-data; boundary=boundary

--boundary
Content-Disposition: form-data; name="files"; filename="document.pdf"
Content-Type: application/pdf

< ./samples/sample.pdf
--boundary
Content-Disposition: form-data; name="to_formats"

md
--boundary
Content-Disposition: form-data; name="do_ocr"

false
--boundary--

